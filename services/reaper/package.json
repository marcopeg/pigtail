{
  "name": "@pigtail/reaper",
  "version": "0.0.2",
  "scripts": {
    "---// DEV": "",
    "start:dev": "./node_modules/.bin/nodemon --watch ssr --watch build -e js index.dev.js",
    "build": "NODE_ENV=production BABEL_ENV=node ./node_modules/.bin/babel ssr --out-dir ./build-ssr",
    "lint": "./node_modules/.bin/eslint .",
    "clean": "rm -rf ./build-ssr",
    "release": "npm run build && npm publish --access public .",
    "---// PROD": "",
    "start": "./node_modules/.bin/pm2 start rapha-reaper.js",
    "stop": "./node_modules/.bin/pm2 stop rapha-reaper.js && ./node_modules/.bin/pm2 delete rapha-reaper.js",
    "pm2": "./node_modules/.bin/pm2"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "@marcopeg/hooks": "^0.2.2",
    "@marcopeg/utils": "^1.12.0",
    "clipboardy": "^1.2.3",
    "docker-container-id": "^1.0.1",
    "es6-promise": "^4.2.5",
    "glob": "^7.1.3",
    "isomorphic-fetch": "^2.2.1",
    "node-env-file": "^0.1.8",
    "pm2": "^3.2.9",
    "systeminformation": "^3.54.0",
    "tail": "^2.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-plugin-dynamic-import-node-babel-7": "^2.0.7",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-react-intl": "^3.0.1",
    "babel-plugin-transform-require-ignore": "^0.1.1",
    "eslint-config-react": "^1.1.7",
    "nodemon": "^1.18.9"
  },
  "preferGlobal": true,
  "bin": {
    "pigtail": "./bin/cli.js"
  },
  "keywords": [
    "metrics",
    "monitoring",
    "agent"
  ]
}
